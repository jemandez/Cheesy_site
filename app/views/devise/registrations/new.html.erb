<div class="signs--container">
<h2 class="main-title">Registro</h2>

<div class="form--center">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, nil, class: ["form__label"]%><br />
    <%= f.email_field :email, autofocus: true, class: ["form__input--text"] %>
  </div>

  <div class="field">
    <%= f.label :password, nil, class: ["form__label"] %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" , class: ["form__input--password"]%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, nil, class: ["form__label"] %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: ["form__input--password"] %>
  </div>

    <%= button_tag(type: 'submit', class: 'submit') do %>
      Crear cuenta
       <span class="submit__icon" >
    <% end %>
<% end %>

<%= render "devise/shared/links" %>
       </div>
</div>
