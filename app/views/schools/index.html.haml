- begin
  - image_url = ::DBX.get_temporary_link('/logo.png')[1]
- rescue
  - image_url = image_url("/assets/cover.png")
  
%section.jumbotron{style: "background-image: url('#{image_url}')"}
  %h1 Cheesy
  %h2 Historias que perduran

-#.grid-image
  - if admin_signed_in?
    = link_to "Agregar una escuela", new_school_path, class: "button button--add"
.schools-container
  .schools
    - @schools.each do |school|
      - begin
        - image_url = ::DBX.get_temporary_link(school.dpath + '/logo.png')[1]
      - rescue
        - image_url = image_url("/assets/logos.png")

      %a.schools__brand{href: school_path(school)}
        .schools__brand__group{style: "background-image: url('#{image_url}')"}
